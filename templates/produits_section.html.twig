{% for section in sections %}
<div class="container mt-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 shadow">
                <img src="{{ section.image }}" class="card-img-top single-img" alt="Produit principal">
                <div class="card-body text-center">
                    <h3 class="text-primary fw-bold">{{ section.titre }}</h3>
                    <h5 class="card-title">{{ section.description }}</h5>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div id="carousel-{{ loop.index }}" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    {% for produit in section.produits %}
                        <div class="carousel-item {% if loop.first %}active{% endif %}">
                            <div class="card h-100 shadow">
                                <div class="row g-0">
                                    <div class="col-md-6">
                                        <img src="{{ produit.image }}" class="img-fluid product-img" alt="{{ produit.titre }}">
                                    </div>
                                    <div class="col-md-6 d-flex align-items-center">
                                        <div class="card-body">
                                            <h5 class="card-title">{{ produit.titre }}</h5>
                                            <p class="card-text">
                                                <span class="text-danger fs-4">{{ produit.prix }} TND</span>
                                                <del class="text-muted">{{ produit.prix_old }} TND</del>
                                            </p>
                                            <button class="btn btn-success w-100 add-to-cart"
                                                    data-id="{{ loop.index }}"
                                                    data-name="{{ produit.titre }}"
                                                    data-price="{{ produit.prix }}">
                                                <i class="fas fa-cart-plus"></i> Ajouter
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carousel-{{ loop.index }}" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon bg-dark rounded-circle p-3"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carousel-{{ loop.index }}" data-bs-slide="next">
                    <span class="carousel-control-next-icon bg-dark rounded-circle p-3"></span>
                </button>
            </div>
        </div>
    </div>
</div>
{% endfor %}

<script>
document.querySelectorAll('.add-to-cart').forEach(button => {
    button.addEventListener('click', () => {
        const productId = button.dataset.id;
        const productName = button.dataset.name;
        const price = button.dataset.price;

        fetch('/cart/add', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ productId, productName, price })
        })
        .then(res => res.json())
        .then(data => alert(data.message || 'Produit ajouté au panier.'));
    });
});
</script>

