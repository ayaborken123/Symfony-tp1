{% extends 'base.html.twig' %}

{% block title %}Confirmation de commande{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card text-center">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">Commande confirmée !</h2>
                </div>
                
                <div class="card-body">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                    </div>
                    
                    <h3 class="card-title">Merci pour votre commande</h3>
                    <p class="card-text">Votre commande <strong>{{ orderId }}</strong> a bien été enregistrée.</p>
                    <p class="card-text">Un email de confirmation vous a été envoyé.</p>
                    
                    <div class="mt-4">
                        <a href="{{ path('app_home') }}" class="btn btn-primary">
                            <i class="fas fa-home"></i> Retour à l'accueil
                        </a>
                    </div>
                </div>
                
                <div class="card-footer text-muted">
                    Nous vous contacterons sous peu pour la livraison.
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}