<div class="container mt-5" style="max-width: 700px;">
  <div class="text-center mb-4">
    <h2 class="text-primary fw-bold">üí¨ Assistance IA Interactive</h2>
    <p class="text-secondary">Posez une question et recevez une r√©ponse instantan√©e !</p>
  </div>

  <div class="input-group">
    <input type="text" id="userMessage" class="form-control" placeholder="Posez votre question...">
    <button id="sendMessage" class="btn btn-success">Envoyer</button>
  </div>

  <div class="mt-4 p-3 rounded shadow-sm bg-light" style="min-height: 120px;">
    <h5 class="text-dark">ü§ñ R√©ponse IA :</h5>
    <p id="aiResponse" class="text-muted" style="white-space: pre-line;"></p>
  </div>
</div>

<script>
  const userMessageInput = document.getElementById('userMessage');
  const aiResponse = document.getElementById('aiResponse');
  const sendButton = document.getElementById('sendMessage');

  // Animation de type "machine √† √©crire"
  function typeText(element, text, speed = 30) {
    element.innerText = '';
    let index = 0;
    const typing = setInterval(() => {
      if (index < text.length) {
        element.innerText += text.charAt(index);
        index++;
      } else {
        clearInterval(typing);
      }
    }, speed);
  }

  async function sendMessage() {
    const message = userMessageInput.value.trim();
    if (!message) {
      aiResponse.innerHTML = "<span class='text-danger'>‚ùóVeuillez √©crire un message.</span>";
      return;
    }

    aiResponse.innerHTML = "<span class='text-info'>‚è≥ R√©flexion en cours...</span>";

    try {
      const response = await fetch('/chatbot?message=' + encodeURIComponent(message));
      const data = await response.json();

      const content = data.response?.content || data.error || "‚ö†Ô∏è R√©ponse inattendue.";
      typeText(aiResponse, content); // ‚úÖ animation de la r√©ponse

    } catch (error) {
      console.error("Erreur API:", error);
      aiResponse.innerHTML = "<span class='text-danger'>‚ö†Ô∏è Erreur de connexion au serveur.</span>";
    }
  }

  // Clique sur le bouton
  sendButton.addEventListener('click', sendMessage);

  // Appuie sur "Entr√©e"
  userMessageInput.addEventListener('keydown', function (e) {
    if (e.key === 'Enter') {
      sendMessage();
    }
  });
</script>


